<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/walkthrough_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unisansheavycaps"
            android:textSize="@dimen/font24"
            android:textColor="@color/colorMainWhite"
            android:textAlignment="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/walkthrough_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quarklight"
            android:textSize="@dimen/font16"
            android:textColor="@color/colorMainWhite"
            android:textAlignment="center"
            android:text="TextView" />

        <ImageView
            android:id="@+id/walkthrough_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[0]" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>